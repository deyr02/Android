<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_field"
        android:layout_width="410dp"
        android:layout_height="284dp"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="30dp"

        android:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button0"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_modulus"
            android:text="%" />

        <Button
            android:id="@+id/button1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_clear"
            android:text="C" />

        <Button
            android:id="@+id/button2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_clearEntry"
            android:text="CE" />

        <Button
            android:id="@+id/button3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:drawableEnd="@android:drawable/ic_input_delete"
            android:onClick="btn_backward"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_one"
            android:text="1" />
        <Button
            android:id="@+id/button5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_two"
            android:text="2" />
        <Button
            android:id="@+id/button6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_three"
            android:text="3" />
        <Button
            android:id="@+id/button7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_add"
            android:text="+" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_four"
            android:text="4" />
        <Button
            android:id="@+id/button9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_five"
            android:text="5" />
        <Button
            android:id="@+id/button10"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_six"
            android:text="6" />
        <Button
            android:id="@+id/button11"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_subtract"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button12"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_seven"
            android:text="7" />
        <Button
            android:id="@+id/button13"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_eight"
            android:text="8" />
        <Button
            android:id="@+id/button14"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_nine"
            android:text="9" />
        <Button
            android:id="@+id/button15"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_multiplication"
            android:text="*" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button16"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_decimalPoint"
            android:text="." />

        <Button
            android:id="@+id/button17"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_zero"
            android:text="0" />

        <Button
            android:id="@+id/button18"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_equal"
            android:text="=" />
        <Button
            android:id="@+id/button19"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="2dp"
            android:onClick="btn_divide"

            android:text="/" />


    </LinearLayout>
</LinearLayout>